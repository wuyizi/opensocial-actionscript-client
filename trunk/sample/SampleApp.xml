<?xml version="1.0" encoding="UTF-8" ?>
<Module>
<ModulePrefs
    title="SampleApp"
    description="Just a sample to demo OpenSocial AS3 Client Library."
    height="500"
    directory_title="Sample App for OpenSocial AS3 Client Library"
    author_email="yiziwu@google.com"
    author_affiliation="Google Inc."
    author_location="Beijing, China"
    scaling="true"
    scrolling="false"
    singleton="false">
  <Require feature="opensocial-0.8"/>
  <Require feature="dynamic-height"/>
  <Require feature="views"/>
  <Require feature="rpc"/>
  <Require feature="flash"/>
  <Require feature="settitle"/>

</ModulePrefs>
<Content type="html">
<![CDATA[

<h1 style="font-size:32px; font-weight:bold; font-family:verdana; text-align: center;">Sample App</h1>
<div id="flashcontainer" style="text-align: center;"></div>


<script type="text/javascript">

  // Change nocache to version number when releasing other than random timestamps.
  var nocache = new Date().getTime();

  var baseUrl = 'http://code.google.com/p/opensocial-actionscript-client/source/browse/trunk/bin/';
  var flashObjId = 'flashObj';

  gadgets.flash.embedFlash(
     baseUrl + 'SampleApp.swf?bpc=' + nocache,
     'flashcontainer',
     9,
     {
        name: flashObjId,
        id: flashObjId,
        width: '600',
        height: '500',
        quality: 'high',
        wmode: 'window',
        allowScriptAccess: 'always'
     });
  gadgets.window.adjustHeight();
</script>
]]>
</Content>
</Module>
